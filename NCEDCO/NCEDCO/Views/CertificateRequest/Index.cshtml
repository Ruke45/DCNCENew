@model NCEDCO.Models.M_Cerificate

@{
    ViewBag.Title = "Index";
}

<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            <small>Certificate Request</small>
        </h3>
        <ol class="breadcrumb">
            <li><a href="index.html">Certificate </a>
            </li>
            <li class="active">Certificate Request </li>
        </ol>
    </div>
</div>
<!-- /.row -->

<div class="row">
    @using (Html.BeginForm("Index", "CertificateRequest", FormMethod.Post, 
                        new { id = "TheForm", enctype = "multipart/form-data" }))
            {
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">Parent Customer Requests Table</div>
            <input id="Submit1" class="btn btn-success" type="submit" onclick="return Savefiles();" value=" submit" />



            <div class="panel-body">
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Document Name</th>
                            <th>Is Mandatory</th>
                            <th></th>
                        </tr>
                    </thead>


                    <tbody>
                        @if (Model != null)
                        {
                            for (int i = 0; i < Model.Support_Docs.Count; i++)
                            {
                                var fileupload1 = "file_" + Convert.ToString(Model.Support_Docs[i].SupportingDocument_Id);
                            <tr>  
                                   @Html.HiddenFor(m => m.Support_Docs[i].SupportingDocument_Id, new { id = @Model.Support_Docs[i].SupportingDocument_Id })
                                   @Html.HiddenFor(m => m.Support_Docs[i].Is_Mandatory, new { id = @Model.Support_Docs[i].Is_Mandatory })
                                <td>@Model.Support_Docs[i].SupportingDocument_Name</td>
                                <td>@Model.Support_Docs[i].Is_Mandatory</td>
                                <td><span class="btn btn-info btn-file">
                                    <input type="file" id="@fileupload1" name="@fileupload1" onchange="ValidateFile(this);" />
                                </span></td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">Parent Customer Requests Table</div>
        </div>
    </div>
    }
</div>
<script>
    var DetailsView = function (RequestId) {
        debugger
        var Url = "/Customer/ParentCustomerRequestsDetails?RequestId=" + RequestId;
        window.location.href = Url;
    }
</script>

