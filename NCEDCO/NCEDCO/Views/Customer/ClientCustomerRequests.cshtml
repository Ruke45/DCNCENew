@model IEnumerable<NCEDCO.Models.M_CustomerRequest>
@{
    ViewBag.Title = "ClientCustomerRequests";
}

<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            <small>Customer's Client Request </small>
        </h3>
        <ol class="breadcrumb">
            <li><a href="index.html">Customer </a>
            </li>
            <li class="active">Customer's Client Requests</li>
        </ol>
    </div>
</div>
<!-- /.row -->

<div class="row">

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">Customer's Client Requests Table</div>
            <div class="panel-body">
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Request_Id)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                            <th>@Html.DisplayNameFor(model => model.Customer_Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Address1)</th>
                            <th>@Html.DisplayNameFor(model => model.Address2)</th>
                            <th>@Html.DisplayNameFor(model => model.ContactPersonName)</th>
                            <th></th>
                        </tr>
                    </thead>


                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {

                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Request_Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                                <td>@Html.DisplayFor(modelItem => item.Customer_Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address1)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address2)</td>
                                <td>@Html.DisplayFor(modelItem => item.ContactPersonName)</td>
                                <td align="center">
                                    @*<div class="btn-group">
                                        <button type="button" class="btn btn-primary" onclick="DetailsView(@item.TeacherId)"><span class="fa fa-info"></span></button>
                                        <button type="button" class="btn btn-primary" onclick='EditView(@item.TeacherId,"@item.Name")'><span class="fa fa-pencil"></span></button>
                                        <button type="button" class="btn btn-primary" onclick="DeleteView(@item.TeacherId)"><span class="fa fa-trash"></span></button>
                                    </div>*@
                                    <a href="#" class="btn btn-primary btn-sm" onclick='DetailsView("@item.Request_Id")'>Detail View </a>
                                </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
             <div class="panel-footer">Customer's Client Requests Table</div>
        </div>
    </div>
</div>




<script src="~/Scripts/pace/pace.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#datatable').dataTable();
        $('#datatable-keytable').DataTable({
            keys: true
        });
        $('#datatable-responsive').DataTable();
        $('#datatable-scroller').DataTable({
            ajax: "js/datatables/json/scroller-demo.json",
            deferRender: true,
            scrollY: 380,
            scrollCollapse: true,
            scroller: true
        });
        var table = $('#datatable-fixed-header').DataTable({
            fixedHeader: true
        });
    });
    TableManageButtons.init();
 </script>
                            
<script>
    var DetailsView = function (RequestId) {
        debugger
        var Url = "/Customer/ClientCustomerRequestsDetails?RequestID=" + RequestId;
        window.location.href = Url;
    }
</script>
