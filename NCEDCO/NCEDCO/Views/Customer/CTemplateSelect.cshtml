@model IEnumerable<NCEDCO.Models.M_NCETemplate>
@{
    ViewBag.Title = "CTemplateSelect";
}

<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">
            <small>Client Template Select</small>
        </h3>
        <ol class="breadcrumb">
            <li><a href="index.html">Customer Client</a>
            </li>
            <li class="active">Template Select</li>
        </ol>
    </div>
</div>
<!-- /.row -->
@{ int count = 0;}
<div class="row">

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Customer Client Template Select Form</div>
            <div class="panel-body">
                <!-- Projects Row -->

                @if (Model != null)
                {

                    foreach (var Template in Model)
                    { 
                       if(count == 0){
                            @Html.Raw("<div class='row'>")
                        }
                       if (count == 3) {@Html.Raw("</div>") }
                        
                       <div class="col-md-4 portfolio-item">
                            <a href="#" onclick='ShowSelected("@Template.Template_Id","REQ112")'><img class="img-responsive" src=" @Template.Img_Url" alt=""></a>
                            <h5><a href="#" onclick='ShowSelected("@Template.Template_Id","REQ112")'>@Template.Template_Name</a></h5>
                            <p>@Template.Description_</p>
                      </div>
                        count++;
                    }
                }
                <!-- /.row -->

            </div>
        </div>
    </div>
</div>
    <!-- Modal -->
<div id="OModel" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content"  id="OModelBody">

    </div>

  </div>
</div>        
<script>
    var ShowSelected = function (TemplateId, RequestId) {
        debugger
        var Url = "/Customer/ShowTemplate?TemplateId=" + TemplateId + "&RequestId=" + RequestId;
        $("#OModelBody").load(Url, function () {
            $("#OModel").modal("show");
        })
    }
</script>         
